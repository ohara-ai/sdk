{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "paths": {
      "@/contracts/*": ["./contracts/*"],
      "@/sdk/*": ["./sdk/*"]
    }
  },
  "include": ["scripts/**/*.ts", "sdk/**/*.ts"],
  "exclude": ["node_modules", "contracts/out", "contracts/cache", "contracts/lib", "e2e-test", "dist"]
}
