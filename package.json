{
  "name": "sdk-wrapper",
  "version": "0.4.0",
  "private": true,
  "description": "Wrapper projects for the SDK, smart contracts and e2e tests",
  "workspaces": [
    "sdk",
    "e2e-test"
  ],
  "scripts": {
    "forge:build": "cd contracts && forge build",
    "forge:test": "cd contracts && forge test",
    "forge:test:verbose": "cd contracts && forge test -vvv",
    "forge:coverage": "cd contracts && forge coverage",
    "update-abi": "cd contracts && forge build && cd .. && node scripts/update-abis.js",
    "sdk:build": "cd sdk && npm run build",
    "sdk:dev": "cd sdk && npm run dev",
    "sdk:install": "cd sdk && npm install",
    "sdk:test": "cd sdk && npm test",
    "sdk:version": "cd sdk && npm version",
    "sdk:publish": "cd sdk && npm publish",
    "e2e:install": "cd e2e-test && npm install",
    "e2e:setup": "cd e2e-test && npm run setup",
    "e2e:dev": "cd e2e-test && npm run dev",
    "e2e:build": "cd e2e-test && npm run build",
    "e2e:test": "cd e2e-test && npm test"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@seriesfi/eslint-config": "^1.3.0",
    "@seriesfi/prettier-config": "^1.2.1",
    "@types/node": "^20.10.6",
    "chalk": "^4.1.2",
    "eslint": "^9.39.1",
    "minimist": "^1.2.8",
    "ora": "^5.4.1",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3"
  }
}
