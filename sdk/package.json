{
  "name": "@ohara-ai/sdk",
  "version": "0.9.8",
  "description": "",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    },
    "./scripts/controller": {
      "import": "./scripts/controller.js",
      "require": "./scripts/controller.js"
    },
    "./scripts/get-controller-address": {
      "import": "./scripts/get-controller-address.js",
      "require": "./scripts/get-controller-address.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "scripts",
    "README.md"
  ],
  "repository": "https://github.com/ohara-ai/sdk.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "tsup src/index.ts src/server.ts --format cjs,esm --dts --external react --external react-dom --external viem --external wagmi --external 'server-only'",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "web3",
    "gaming",
    "blockchain",
    "react",
    "ethereum"
  ],
  "author": "Ohara AI",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "viem": "^2.7.0",
    "wagmi": "^2.5.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.454.0",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/node": "^22.9.1",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@vitest/coverage-v8": "^4.0.12",
    "@vitest/ui": "^4.0.12",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "server-only": "^0.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.14.0",
    "vitest": "^4.0.12"
  }
}
